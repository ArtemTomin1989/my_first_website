<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Products</title>
    <link rel="stylesheet" href="/css/my_products.css" />
  </head>
  <body>
    <%- include("../partials/header") %>

    <h1>My Products List</h1>
    <ul>
      <% my_products.forEach(product => { %>
      <li>
        <div><%= product.name %> - $<%= product.price %><br /></div>

        <div>
          <% if (product.image) { %>
          <img
            src="<%= product.image %>"
            alt="Product image"
            style="max-width: 200px; margin: 10px 0"
          /><br />
          <% } %>
        </div>

        <div><em><%= product.description %></em><br /></div>

        <a href="/edit_my_products/<%= product._id %>">Edit</a>
        <button class="delete-btn" data-id="<%= product._id %>">Delete</button>
      </li>
      <% }); %>
    </ul>

    <a href="/add_product">Add another product</a>

    <div id="confirmModal" class="modal hidden">
      <div class="modal-content">
        <p>Are you sure you want to delete this product?</p>
        <form id="deleteForm" method="POST">
          <button type="submit">Yes, delete</button>
          <button type="button" id="cancelBtn">Cancel</button>
        </form>
      </div>
    </div>

    <script src="/scripts/my_products.js"></script>
  </body>
</html>
